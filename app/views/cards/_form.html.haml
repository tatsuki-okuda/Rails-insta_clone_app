.cardBox
  .ct
    .userTitleBox
      .userTitleBox_icon
        = image_tag current_user.avataor_image, class: 'object-fit'
      %p  
        = current_user.username
    .formBox
      = form_with(model: card, local: true) do |f|
        %div.inputbox
          = f.text_field :content, class: 'input',:placeholder => "What's on your mind ?"
        %div
          = f.label :imgs, 'Album', class: 'imgs_btn'

        .card_body.swiper-container
          .swiper-wrapper
          -# ここにjsで画像を入れる
          .swiper-pagination


        %div
          = f.file_field :imgs,multiple: true, class: 'imgs uploader'
        = f.submit "保存", class: 'btn-primary'

= javascript_pack_tag 'formPreview'
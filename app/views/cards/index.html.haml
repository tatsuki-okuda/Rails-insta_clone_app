.cardBox
  .ct
    %ul
      - @cards.each do |card|
        %li.card
          .card_header
            = link_to profile_path, class: "card_header_img" do
              = image_tag current_user.avataor_image, class: 'object-fit'
            .card_header_text
              %p name
              %p 3 hours ago
          .card_body
            - if card.imgs&.attached?
              - card.imgs.each do |img| 
                .card_body_inner
                  = image_tag img, class: 'object-fit'
            - else
              .card_body_inner
                = image_tag 'Rectangle1.png'
          .card_footer
            .card_footer_icons
              = image_tag 'Vector.png'
              = image_tag 'Vector (1).png'
              = image_tag 'Vector (2).png'
            %p.card_footer_text 
              = card.content
            %p.card_footer_text 
              Jmax_21  Summer holiday :3


      
